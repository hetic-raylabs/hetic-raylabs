{
    "version": 6,
    "cmakeMinimumRequired": { "major": 3, "minor": 25 },

    "configurePresets": [
        {
            "name": "base-ninja",
            "displayName": "Base (Ninja)",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/cmake",
            "cacheVariables": {
                "CMAKE_CXX_STANDARD": "20",
                "CMAKE_CXX_STANDARD_REQUIRED": "ON",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        },
        {
            "name": "base-msvc",
            "displayName": "Base (MSVC)",
            "generator": "Visual Studio 17 2022",
            "architecture": { "value": "x64", "strategy": "external" },
            "binaryDir": "${sourceDir}/build/cmake",
            "cacheVariables": {
                "CMAKE_CXX_STANDARD": "20",
                "CMAKE_CXX_STANDARD_REQUIRED": "ON",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        },

        {
            "name": "host-linux-clang-debug",
            "displayName": "Host Linux Clang Debug",
            "inherits": "base-ninja",
            "binaryDir": "${sourceDir}/build/linux-x86_64-clang/debug/cmake",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/build/linux-x86_64-clang/debug/cmake/conan_toolchain.cmake"
            },
            "environment": { "CC": "clang", "CXX": "clang++" }
        },
        {
            "name": "host-linux-clang-release",
            "displayName": "Host Linux Clang Release",
            "inherits": "base-ninja",
            "binaryDir": "${sourceDir}/build/linux-x86_64-clang/release/cmake",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/build/linux-x86_64-clang/release/cmake/conan_toolchain.cmake"
            },
            "environment": { "CC": "clang", "CXX": "clang++" }
        },
        {
            "name": "host-linux-gcc-debug",
            "displayName": "Host Linux GCC Debug",
